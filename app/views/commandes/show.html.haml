%h1 Commande
.actions
  = link_to 'Retour', commandes_path
  \|
  = link_to "Modifier", edit_commande_path(@commande) 
  \|
  = link_to 'Supprimer', @commande, :method => :delete, :data => { :confirm => 'Etes-vous sur de vouloir supprimer cette commande ?' }

%h2 Infos
!= "Commande passée le #{@commande.date} pour #{@commande.client.societe} pour un montant total de #{@commande.montant} &#x20AC; HT."
%br
= @commande.commentaire

%h2 Statut
- if @commande.status == 0
  = "Ceci est une pré-commande. Elle sera intégrée à la prochaine production."
- if @commande.status == 1
  = "Cette commande est en cours de production. Elle pourra être traitée à la prochaine rentrée de stock."
- if @commande.status == 2
  = "Cette commande est en attente. Pour préparer l'envoi, imprimez le"
  = link_to 'bon de livraison', commande_path(@commande, mode: 'livraison'), :target => '_blank'
  = " et le"
  = link_to 'pro forma', commande_path(@commande, mode: 'facture'), :target => '_blank'
  = '.'
    
%h2 Détail

%table.commande
  %tr
    %th Désignation
    %th{colspan: 7} Tailles
    
  - @modeles.each do |modele|
    %tr.designation
      %td= "N° #{modele.numero} - #{modele.nom}"
      - modele.liste_taille.each do |t|
        %td= t
    - @commande.lignes_for(modele).each do |l|
      %tr
        %td= l.version.couleurs
        - modele.liste_taille.each do |t|
          %td= l.quantity(t) if t
    