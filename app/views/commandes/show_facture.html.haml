.title
  Madame BlaBla

.bon
  - if @commande.status < 3
    %h1 Pro Forma
  - else
    %h1 Facture

  .client
    %p= @commande.client.societe
    %p= @commande.client.nom
    %p
      :plain
        #{to_html(@commande.client.adresse_1)}

  %p.reference
    = "Le #{Date.today.strftime('%d/%m/%Y')},"
    = "commande n°#{@commande.reference}, pour #{@commande.client.societe}"
    = "(SIRET: #{@commande.client.siret})." 
   
  %table.commande
    %tr.designation
      %th{width: "400px;"} Désignation
      %th{width: "60px;"} Qnt.
      %th{width: "60px;"} P.U. H.T.
      %th{width: "70px;"} Montant
    - @modeles.each do |modele|
      - if @commande.quantites_totale[modele.id] > 0
        %tr.facture
          %td= "N° #{modele.numero} - #{modele.nom}"
          %td= @commande.quantites_totale[modele.id]
          %td!= "#{modele.prix} &#x20AC;"
          %td!= "#{@commande.montant(modele)} &#x20AC;"
    %tr
      %td
      %td
      %td
      %td
    %tr.totaux
      %td
      %td{colspan: 2} Total HT
      %td.total!= "#{@commande.montant} &#x20AC;"
    - unless true#@commande.remise.nil?
      %tr.totaux
        %td
        %td{colspan: 2} Remise
        %td.total!= "#{@commande.remise} &#x20AC;"
      %tr.totaux
        %td
        %td{colspan: 2} Net HT
        %td.total!= "#{@commande.remise} &#x20AC;"
    %tr.totaux
      %td
      %td{colspan: 2} TVA
      %td.total!= "#{@commande.tva} &#x20AC;"
    %tr.totaux
      %td
      %td{colspan: 2} Total TTC
      %td.total!= "#{@commande.montant+ @commande.tva} &#x20AC;"
 
  - if @commande.status < 1
    %p.alert
      = "Attention ! Ceci n'est pas une facture : elle n'inclut pas les frais de livraison ni"
      = "les changements qui peuvent intervenir d'ici l'envoi de votre commande. Le montant définitf "
      = "sera indiqué sur la facture qui vous sera envoyée."
  - else 
    %p.payable
      != "Facture payable le xxx pour la somme de #{@commande.montant+ @commande.tva}  &#x20AC;."
    %p.legislation
      = "Pénalité de retard (taux annuel) de 3%. Pas d'escompte pour paiement anticipé."
      = "Nous nous réservons la propriété des marchandises jusqu'au paiement du prix par l'acheteur."
      = "Notre droit de revendication porte aussi bien sur les marchandises que sur leur prix si elles ont déjà été revendues (Loi du 12 mai 1989)."
      
      
  %p.informations
    != "#{@patron.societe}"
    != "-&nbsp;Siège social&nbsp;:&nbsp;#{@patron.adresse.gsub("\r\n",", ")}"
    != "-&nbsp;EURL au capital de #{@patron.capital.round}"
    != "-&nbsp;SIRET&nbsp;:&nbsp;#{@patron.siret} -&nbsp;TVA&nbsp;:&nbsp;#{@patron.tva}"
    != "-&nbsp;Téléphone&nbsp;:&nbsp;#{@patron.telephone} -&nbsp;E-mail&nbsp;:&nbsp;#{@patron.email}"
