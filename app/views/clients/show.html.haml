%h1 Clients :: détails
.actions
  = link_to 'Retour', clients_path
  \|
  = link_to "Modifier", edit_client_path(@client)
  \|
  = link_to 'Supprimer', @client, :method => :delete, :data => { :confirm => 'Etes-vous sur de vouloir supprimer ce client ?' }

%h2 Agent
- if @client.agent
  = @client.agent.nom
- else
  = "Pas d'agent !"

%h2 Coordonnées

%dl

  %dt Société
  %dd= @client.societe

  %dt Nom
  %dd= @client.nom

  %dt= "Numéro Siret"
  %dd= @client.siret

  %dt= "Numéro TVA"
  %dd= @client.tva

  %dt= "Soumis à la TVA"
  %dd= @client.has_tva ? "Oui" : "Non"

  %dt E-mail
  %dd= @client.email

  %dt Téléphone
  %dd= @client.telephone

  %dt Adresse de facturation
  %dd
    :plain
      #{to_html(@client.adresse_1)}

  %dt Adresse de livraison
  %dd
    :plain
      #{to_html(@client.adresse_2)}

