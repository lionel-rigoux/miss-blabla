= render "/application/errors", :@record => @modele

%h2 Descriptif

= form_for @modele, :method=>(@modele.id ? :put : :post) do |f|
  = f.hidden_field :id

  = f.label :numero, 'Référence'
  = f.text_field :numero

  = f.label :nom, 'Nom'
  = f.text_field :nom

  = f.label :tailles, 'Tailles'
  %table
    %tr
      %td entre
      %td= f.select :taille_min, @modele.tailles_possibles.collect{|t| [t,t]}, {}, {:class=>'taille'}
      %td{width: "30px;"} et
      %td= f.select :taille_max, @modele.tailles_possibles.collect{|t| [t,t]}, {}, {:class=>'taille'}

  = f.label :prix, 'Prix Unitaire HT'
  = f.text_field :prix


