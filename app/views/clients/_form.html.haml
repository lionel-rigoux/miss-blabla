= form_for @client, :method=>(@client.id ? :put : :post) do |f|

  %h2 Agent

  = f.label :agent_id, 'Client suivi par'
  = f.collection_select :agent_id, Agent.all, :id, :nom, promt: "Select"

  %h2 Coordonnées
  
  = f.label :societe, 'Société'
  = f.text_field :societe
  %br
  = f.label :nom, 'Nom et Prénom'
  = f.text_field :nom
  %br
  = f.label :siret, 'Numéro Siret'
  = f.text_field :siret
  %br
  = f.label :tva, 'Numéro TVA'
  = f.text_field :tva
  %br
  = f.label :has_tva, 'Soumis à la TVA'
  = f.check_box :has_tva
  %br
  = f.label :email, 'E-mail'
  = f.email_field :email
  %br
  = f.label  :telephone, 'Téléphone'
  = f.text_field  :telephone
  %br
  = f.label  :adresse_1, 'Adresse de facturation'
  = f.text_area :adresse_1, size: "30x8"
  %br
  = f.label :adresse_2, 'Adresse de livraison'
  = f.text_area  :adresse_2, size: "30x8"
